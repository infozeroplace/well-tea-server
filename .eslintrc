{
    "parserOptions": {
      "ecmaVersion": 12, // Specifies ECMAScript version 12 (ES2021)
      "sourceType": "module" // Specifies the source type as module
    },
    "plugins": [],
    "extends": [
      "eslint:recommended", // Extends the recommended ESLint rules
      "prettier" // Enables Prettier integration
    ],
    "rules": {
      "no-unused-vars": "error", // Enforces reporting unused variables as errors
      "no-console": "warn", // Reports console statements as warnings
      "no-undef": "error", // Enforces reporting the usage of undeclared variables as errors
      "no-unused-expressions": "error", // Enforces reporting unused expressions as errors
      "no-unreachable": "error", // Enforces reporting unreachable code as errors
      "@typescript-eslint/consistent-type-definitions": ["error", "type"] // Enforces consistent type definitions using the "type" keyword
    },
    "env": {
      "browser": true, // Enables browser global variables
      "es2021": true, // Enables ES2021 global variables
      "node": true // Enables Node.js global variables
    },
    "globals": {
      "process": "readonly" // Specifies the "process" global variable as read-only
    }
  }
  